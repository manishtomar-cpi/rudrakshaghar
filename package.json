{
  "name": "rudraksha-monorepo",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently -n WEB,API,MOBILE -c green,blue,magenta \"pnpm --filter web dev\" \"pnpm --filter api dev\" \"pnpm --filter mobile start\"",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:mobile": "pnpm --filter mobile start",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "db:push": "pnpm --filter api prisma db push",
    "db:migrate": "pnpm --filter api prisma migrate deploy",
    "db:studio": "pnpm --filter api prisma studio"
  },
  "devDependencies": {
    "@expo/metro-config": "^54.0.8",
    "concurrently": "^9.2.1",
    "metro-minify-terser": "^0.83.3",
    "turbo": "^2.0.0"
  },
  "workspaces": ["apps/*", "packages/*"],
  "pnpm": {
  "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0"
    },
    "publicHoistPattern": [
      "react",
      "react-dom",
      "react-native",
      "react-native-renderer",
      "*expo*"
    ]
  }
}
